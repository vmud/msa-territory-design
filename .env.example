# Multi-Retailer Store Scraper - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# OXYLABS PROXY CONFIGURATION (Optional)
# =============================================================================
# Sign up at https://oxylabs.io/ to get credentials
# Leave blank to run in direct mode (no proxy)

# Your Oxylabs username
OXYLABS_USERNAME=

# Your Oxylabs password
OXYLABS_PASSWORD=

# Default proxy mode: direct, residential, web_scraper_api
# Can be overridden with --proxy CLI flag
PROXY_MODE=direct

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# SCRAPER SETTINGS
# =============================================================================

# Default country for geo-targeting (ISO 3166-1 alpha-2)
OXYLABS_COUNTRY=us

# Enable JavaScript rendering by default (for web_scraper_api mode)
OXYLABS_RENDER_JS=false

# Request timeout in seconds
OXYLABS_TIMEOUT=60

# Maximum retry attempts
OXYLABS_MAX_RETRIES=3
